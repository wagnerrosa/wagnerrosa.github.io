{
  "name": "minimal-static-portfolio",
  "version": "1.0.0",
  "description": "A minimal static portfolio built with HTML and Tailwind CSS.",
  "main": "index.html",
  "scripts": {
    "build": "tailwindcss -i ./input.css -o ./output.css --minify",
    "watch": "tailwindcss -i ./input.css -o ./output.css --watch",
    "dev": "tailwindcss -i ./input.css -o ./output.css --watch",
    "serve": "live-server"
  },
  "keywords": [
    "portfolio",
    "static",
    "html",
    "tailwindcss"
  ],
  "author": "Wagner Rosa",
  "license": "ISC",
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.1"
  }
}
